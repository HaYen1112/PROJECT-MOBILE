<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:layout_editor_absoluteX="10dp"
    tools:layout_editor_absoluteY="10dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNamePromotion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#D6D6D6"
                android:shadowRadius="5"
                android:text="Tri ân khách hàng"
                android:textColor="#CAB600"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textDateStart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20/02"
                    android:textColor="#000202"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/textView54"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textColor="#000000"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtDateEnd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="24/02"
                    android:textColor="#000000"
                    android:textStyle="italic" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_promotion_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F1FEFF"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/txtNamePromotion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:shadowColor="#D6D6D6"
                        android:shadowRadius="5"
                        android:text="Thông tin sự kiện"
                        android:textColor="#000000"
                        android:textSize="20sp"
                        android:textStyle="bold|italic" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textDateStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dp"
                            android:text="     Sự kiện ưu đãi dành cho khách hàng có tài khoản đặt vé từ 50 vé trở lên trên app của chúng tôi. Nhằm tri ân , gửi lời cảm ơn đến khách hàng đã tin dùng dịch vụ."
                            android:textColor="#000202"
                            android:textSize="20sp"
                            android:textStyle="italic" />

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView55"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:text="Danh sách quà khuyến mãi"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingLeft="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#DFFABF"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="246dp"
                            android:layout_height="match_parent"
                            android:gravity="top|left"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phiếu giảm giá 20%"
                                android:textColor="#070000"
                                android:textSize="20sp"></TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView56"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Còn lại: "
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/textView57"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="20"
                                    android:textColor="#000000" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="78dp"
                            android:layout_height="68dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Nhận"
                            app:backgroundTint="#4CAF50"
                            app:cornerRadius="20dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#E4E4E3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="246dp"
                            android:layout_height="match_parent"
                            android:gravity="top|left"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mũ lưỡi trai vải"
                                android:textColor="#070000"
                                android:textSize="20sp"></TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView56"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Còn lại: "
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/textView57"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="25"
                                    android:textColor="#000000" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="78dp"
                            android:layout_height="68dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Hết"
                            app:backgroundTint="#8C8C8C"
                            app:cornerRadius="20dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#DFF6F3"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="246dp"
                            android:layout_height="match_parent"
                            android:gravity="top|left"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phiếu giảm giá 10%"
                                android:textColor="#070000"
                                android:textSize="20sp"></TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView56"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Còn lại: "
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/textView57"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="20"
                                    android:textColor="#000000" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="78dp"
                            android:layout_height="68dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Đã nhận"
                            app:backgroundTint="#001322"
                            app:cornerRadius="20dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#DFFABF"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="246dp"
                            android:layout_height="match_parent"
                            android:gravity="top|left"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phiếu giảm giá 5%"
                                android:textColor="#070000"
                                android:textSize="20sp"></TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView56"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Còn lại: "
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/textView57"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="30"
                                    android:textColor="#000000" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="78dp"
                            android:layout_height="68dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Nhận"
                            app:backgroundTint="#4CAF50"
                            app:cornerRadius="20dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="15dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#DFFABF"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="246dp"
                            android:layout_height="match_parent"
                            android:gravity="top|left"
                            android:orientation="vertical"
                            android:paddingLeft="10dp"
                            android:paddingTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Áo thun"
                                android:textColor="#070000"
                                android:textSize="20sp"></TextView>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView56"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Còn lại: "
                                    android:textColor="#000000" />

                                <TextView
                                    android:id="@+id/textView57"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="20"
                                    android:textColor="#000000" />
                            </LinearLayout>

                        </LinearLayout>

                        <Button
                            android:id="@+id/button7"
                            android:layout_width="78dp"
                            android:layout_height="68dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:text="Nhận"
                            app:backgroundTint="#4CAF50"
                            app:cornerRadius="20dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <Button
                    android:id="@+id/btn_BackCTKM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Quay về"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="#8BC34A"
                    app:cornerRadius="20dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
