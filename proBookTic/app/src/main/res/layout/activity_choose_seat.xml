<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="?android:attr/colorFocusedHighlight"></androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="770dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >


                    <ImageView
                        android:id="@+id/background"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/choose_seat" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="103dp"
                        android:layout_height="24dp"

                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="137dp"
                        android:layout_marginLeft="137dp"
                        android:layout_marginTop="69dp"
                        android:layout_marginEnd="153dp"
                        android:layout_marginRight="153dp"
                        android:gravity="center_horizontal"
                        android:text="Select Seat"
                        android:textColor="#075DD0"
                        android:textStyle="bold"
                        tools:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtPas"
                        android:layout_width="79dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="36dp"
                        android:layout_marginLeft="36dp"
                        android:layout_marginTop="157dp"
                        android:layout_marginEnd="277dp"
                        android:layout_marginRight="277dp"
                        android:text="0 Người" />

                    <TextView
                        android:id="@+id/txtChooseSeat"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:gravity="center_horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="261dp"
                        android:layout_marginLeft="261dp"
                        android:layout_marginTop="157dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginRight="15dp"
                        android:text="C3" />

                    <TextView
                        android:id="@+id/txtIdCar"
                        android:layout_width="92dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="147dp"
                        android:layout_marginLeft="147dp"
                        android:layout_marginTop="158dp"
                        android:layout_marginEnd="153dp"
                        android:layout_marginRight="153dp"
                        android:text="DN_018" />

                    <ImageView
                        android:id="@+id/imgPassenger"
                        android:layout_width="20dp"
                        android:layout_height="32dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="66dp"
                        android:layout_marginLeft="66dp"
                        android:layout_marginTop="120dp"
                        android:layout_marginEnd="307dp"
                        android:layout_marginRight="307dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_directions_walk_24px" />

                    <ImageView
                        android:id="@+id/imgCar"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="178dp"
                        android:layout_marginLeft="178dp"
                        android:layout_marginTop="121dp"
                        android:layout_marginEnd="189dp"
                        android:layout_marginRight="189dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_directions_bus_24px" />

                    <ImageView
                        android:id="@+id/imgSeat"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginStart="306dp"
                        android:layout_marginLeft="306dp"
                        android:layout_marginTop="121dp"
                        android:layout_marginEnd="66dp"
                        android:layout_marginRight="66dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_airline_seat_recline_extra_24px" />

                    <LinearLayout
                        android:id="@+id/layoutSeat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="270dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtNhaXe"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="20dp"
                            android:text="Đại Ngân"
                            android:textColor="?android:attr/colorFocusedHighlight"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtIdXE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:paddingBottom="10dp"
                            android:text="63F-00015"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:layout_marginLeft="50dp"
                            android:layout_marginRight="40dp">

                            <ImageView
                                android:id="@+id/imgSAP"
                                android:layout_width="6dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/seat_gray" />

                            <TextView
                                android:id="@+id/txtSAP"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Ghế trống"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/imgSBP"
                                android:layout_width="6dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/seat_orange" />

                            <TextView
                                android:id="@+id/txtSBP"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Ghế đã đặt"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/txtSCB"
                                android:layout_width="6dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/seat_green" />

                            <TextView
                                android:id="@+id/txtSCP"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_weight="1"
                                android:background="#FFFFFF"
                                android:text="Ghế bạn chọn"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/imgSSP"
                                android:layout_width="6dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/yellow_seat" />

                            <TextView
                                android:id="@+id/txtSSP"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="Ghế đang bán"
                                android:textSize="10sp" />


                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/btnProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:insetBottom="0dp"
        android:text="Tiếp tục"
        app:backgroundTint="?android:attr/colorFocusedHighlight"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="bottom|center" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>