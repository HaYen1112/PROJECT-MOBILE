<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDFDFD"
    >
    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_directions_bus_24px"/>
    <TableLayout
        android:layout_width="300dp"
        android:layout_height="120dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Chuyến đi: An Giang - Bến xe Miền Tây"
            android:id="@+id/chuyenDi"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Giờ khỏi hành: 9:00 AM"
            android:id="@+id/gioKH"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Giá vé: 150.000 Đồng"
            android:id="@+id/giaVe"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Biển số xe: 09992"
            android:id="@+id/bienSo"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"/>
    </TableLayout>

</LinearLayout>