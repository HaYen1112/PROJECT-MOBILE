<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.PaymentSuccess">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="124dp"

            android:layout_marginTop="0dp"
            android:background="@drawable/top"
            android:scaleType="fitXY" />

        <View android:id="@+id/success"
            android:background="@drawable/success"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:layout_width="77.62646484375dp"
            android:layout_height="77.62646484375dp" />

        <TextView
            android:id="@+id/payment_successful"

            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text="Thanh toán thành công!"
            android:textColor="@color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/payment_ticket"

            android:layout_width="319dp"
            android:layout_height="83dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="Bạn sẽ nhận một email từ chúng tôi về chi tiết thông tin thanh toán. Bạn có thể xem vé của bạn ngay bây giờ!"
            android:textColor="#5A5A5A"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_seeTicket"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_button"
            android:text="Xem vé"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>