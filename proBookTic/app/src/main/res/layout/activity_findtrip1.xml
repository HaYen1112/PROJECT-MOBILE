<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Findtrip1">
    <ImageView
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="124dp"

        android:layout_marginTop="0dp"
        android:background="@drawable/top"
        android:scaleType="fitXY" />

    <RadioGroup
        android:id="@+id/radioGr"
        android:layout_width="370dp"
        android:layout_height="43dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <RadioButton
            android:id="@+id/radioButtonKhuHoi"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Round trip"
            android:checked="true"
            android:textSize="18dp"/>
        <RadioButton
            android:id="@+id/radioButton1chieu"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="One_way"
            android:textSize="18dp"/>

    </RadioGroup>


    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="220dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="167dp"
        >

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/duongvien"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Orign"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/spnOrign"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/duongvien"
                android:spinnerMode="dropdown" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="90dp"
            android:layout_margin="10dp"
            android:background="@drawable/duongvien"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="Destination"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <Spinner
                android:id="@+id/spnDes"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/duongvien"
                android:spinnerMode="dropdown" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="190dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/duongvien"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:text="Departure date"
            android:textColor="@color/black"
            android:textSize="18dp"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:background="@drawable/duongvien"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="6dp">

            <ImageButton
                android:id="@+id/imageBttChonngayDi"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/calendar_icon"
                />



            <EditText
                android:id="@+id/editTextngayDi"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date" />


        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Return date"
            android:textSize="18dp"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="56dp"
            android:background="@drawable/duongvien"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingTop="6dp">

            <ImageButton
                android:id="@+id/imageBttChonngayVe"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/calendar_icon"
                />


            <EditText
                android:id="@+id/editTextngayVe"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="200dp"
        tools:layout_editor_absoluteY="580dp">

        <Button
            android:id="@+id/imgBttTimchuyendi"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_button"
            android:scaleType="fitXY"
            android:text="tìm kiếm ngay"
            app:backgroundTintMode="multiply"
            app:backgroundTint="@color/white"
            app:srcCompat="@drawable/find_now" />

    </LinearLayout>


</LinearLayout>