<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View.Findtrip3">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/steps" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#244CBA"></View>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="620dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="1. Departure day: "
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tVngay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="13/05/2021"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tV1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="From: "
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/tVdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="TP HCM"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tV2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  to:  "
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/tVdiemden"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DA LAT"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tVselectRoute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Select route"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="500dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/duongvien"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/listViewTrips"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="2. Return day: "
                            android:textSize="20dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/tVngayve"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="13/05/2021"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tV3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="From: "
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/tVdpdiemdi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="TP HCM"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/tV4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  to:  "
                            android:textColor="@color/black"
                            android:textSize="20dp" />
                        <TextView
                            android:id="@+id/tVdiemden2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DA LAT"
                            android:textColor="@color/black"
                            android:textSize="20dp" />

                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/tVselectRoute1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="Select route"
                    android:textSize="25dp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="372dp"
                    android:layout_height="500dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/duongvien"
                    android:orientation="vertical">

                    <ListView
                        android:id="@+id/listViewTrips1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </ListView>


                </LinearLayout>



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/buttonPre"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Previous"
                    android:backgroundTint="#244CBA"/>

                <Button
                    android:id="@+id/button2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="209dp"
                    android:layout_marginLeft="209dp"
                    android:backgroundTint="#244CBA"
                    android:text="Next" />
            </RelativeLayout>
        </LinearLayout>


    </ScrollView>


</LinearLayout>