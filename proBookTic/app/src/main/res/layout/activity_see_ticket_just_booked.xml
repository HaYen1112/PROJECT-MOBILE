<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.SeeTicketJustBooked">
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="124dp"

            android:layout_marginTop="0dp"
            android:background="@drawable/top"
            android:scaleType="fitXY" />

        <View
            android:id="@+id/success"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"

            android:layout_marginTop="0dp"
            android:background="@drawable/trip" />

        <LinearLayout

            android:layout_width="344dp"
            android:layout_height="114dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="119dp"
                android:layout_height="91dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_HourBeginAtSeeTicket"

                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="9:23"
                    android:textColor="#244CBA"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_LocalBeginAtSeeTicket"

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="ĐÀ LẠT"
                    android:textColor="#B7B7B7"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgcarPayAtSeeTicket"
                android:layout_width="29.18359375dp"
                android:layout_height="29.183502197266dp"
                android:layout_marginTop="50dp"
                android:src="@drawable/ic_directions_bus_24px" />

            <LinearLayout
                android:layout_width="134dp"
                android:layout_height="91dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_HourEndAtSeeTicket"

                    android:layout_width="61dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="12:23"
                    android:textColor="#244CBA"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_LocalEndAtSeeTicket"

                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:text="TP HCM"
                    android:textColor="#B7B7B7"
                    android:textSize="17sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="269dp">

            <LinearLayout
                android:id="@+id/layout_seeJustTic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <Button
            android:id="@+id/btn_backHome"
            android:layout_width="345dp"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_button"
            android:text="Trở về trang chủ"
            app:backgroundTint="#FFFFFF"
            app:backgroundTintMode="multiply" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>